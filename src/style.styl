*
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline


vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

transition()
  vendor('transition', arguments)

border-radius()
  vendor('border-radius', arguments)

transform()
  vendor('transform', arguments)

box-orient()
  vendor('box-orient', arguments)

box-flex()
  vendor('box-flex', arguments)

box-align()
  vendor('box-align', arguments)

box-pack()
  vendor('box-pack', arguments)

box-reflect()
  vendor('box-reflect', arguments)

box-sizing()
  vendor('box-sizing', arguments)

user-select()
  vendor('user-select', arguments)

animation()
  vendor('animation', arguments)

animation-delay()
  vendor('animation-delay', arguments)


lightestred = #fe6f66
lighterred = #ec625a
lightred = #e9463c
red = #f00
darkred = #993832
darkgrey = #555
lightblue = #3c96e9

body
  font-family Telex, sans-serif
  color darkgrey
  background-image url('ui/light_wool.png')

::selection
  background lightestred

::-moz-selection
  background lightestred

a
  color inherit
  text-decoration none
  transition .25s
  &:hover
    color lightred

.impress-supported
  .step
    opacity .05

.step
  position relative
  width 900px
  box-sizing border-box
  font-size 48px
  line-height 1.5
  transition opacity .5s

  &.active
