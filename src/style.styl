@-webkit-keyframes swing-anim
  from
    transform rotate(-15deg)
  to
    transform rotate(15deg)
@-moz-keyframes swing-anim
  from
    transform rotate(-15deg)
  to
    transform rotate(15deg)
@-o-keyframes swing-anim
  from
    transform rotate(-15deg)
  to
    transform rotate(15deg)
@keyframes swing-anim
  from
    transform rotate(-15deg)
  to
    transform rotate(15deg)

